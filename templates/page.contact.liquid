      <div class="section-header text-center contact-temp">
        <h1>{{ page.title }}</h1>
      </div>
 
     <div class="rte">
        <div class="side-nav">
          <ul>
            <li class="btn-link"><a href="/pages/contact">Contact<br>Us</a><div>▶</div> </li>
            <li class="btn-link"><a href="{{'PSA.pdf' | asset_url}}" target="_blank">Download a<br>Brochure</a><div>▶</div> </li>
            <li class="btn-link"><a href="/pages/schedule">Schedule an<br> Appointment</a><div>▶</div></li>
            <li class="btn-link"><a href="/pages/support">Attend an Informational<br>Support Group</a><div>▶</div></li>
